bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key t toggle-show-read-feeds
#bind-key D pb-download
#bind-key U show-urls
#bind-key x pb-delete

#macro v set browser "tsp setsid nohup mpv --ytdl-format=bestvideo+bestaudio/best"; open-in-browser ; set browser linkhandler

# macro setup
browser "$BROWSER %u"

# launch browser
macro , open-in-browser
# launch video player
macro v set browser "TS_SOCKET=/tmp/md tsp mpv --quiet --geometry=-15-60 --autofit=854x480 --title='newsboat'" ; open-in-browser ; set browser "$BROWSER %u"
# download video
macro d set browser "TS_SOCKET=/tmp/dl tsp yt-dlp --format 135+139"; open-in-browser ; set browser "$BROWSER %u"
# download audio only
macro a set browser "TS_SOCKET=/tmp/dl tsp yt-dlp --embed-metadata --format 139" ; open-in-browser ; set browser "$BROWSER %u"
# copy link to clipboard
macro c set browser "echo %u | xclip -r -sel clip" ; open-in-browser ; set browser "$BROWSER %u"


# Colors
color background default default
color listnormal default default
color listfocus_unread black yellow standout bold
color listfocus black yellow standout bold
color listnormal_unread blue default
color article default default
color info red black bold

highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default

highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default
